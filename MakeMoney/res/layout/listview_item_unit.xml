<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutListItemUnit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/apkIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/apk_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/apkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/star"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/apkName"
            android:layout_below="@+id/apkName"
            android:layout_marginTop="10dp"
            android:rating="0"
            android:stepSize="1.0" />

        <ImageView
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/star"
            android:layout_alignParentRight="true"
            android:src="@drawable/download" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/star"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/star"
            android:src="@drawable/diamond" />

        <TextView
            android:id="@+id/moeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/star"
            android:layout_toRightOf="@+id/imageView2"
            android:text="10"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>