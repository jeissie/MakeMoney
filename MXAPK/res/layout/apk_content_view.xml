<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/title" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/top_back_0"
        android:text="  返回"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_image"
        android:layout_marginTop="2dp"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/apk_icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:padding="2dp"
                        android:src="@drawable/icon" />
                    <TextView
                        android:id="@+id/apk_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="1.8w次"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/apk_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="换物质"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/apk_star"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/star_5" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/apk_360"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/download_image"
                        android:layout_width="58dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:background="#b5dd99"
                        android:gravity="center"
                        android:text="下载"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="大小:"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="当前版本:"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="作者:"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="更新时间:"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/apk_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="1.78MB"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/apk_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="安卓1.6以上"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/apk_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="未知"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/apk_publish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="2012-1-1"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080" />

            <Gallery
                android:id="@+id/apk_content_gallerys"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="#e0e0e0"
                android:gravity="left"
                android:soundEffectsEnabled="false"
                android:spacing="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080" />

            <TableRow
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2.99"
                    android:gravity="center"
                    android:text="基本信息"
                    android:textColor="#000000" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.01"
                    android:background="#0099CC" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2.99"
                    android:gravity="center"
                    android:text="应用权限"
                    android:textColor="#000000" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.01"
                    android:background="#0099CC" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2.99"
                    android:gravity="center"
                    android:text="其他版本"
                    android:textColor="#000000" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.01"
                    android:background="#0099CC" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2.99"
                    android:gravity="center"
                    android:text="评论"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD" >

                <ImageView
                    android:id="@+id/cursor"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_weight="3"
                    android:scaleType="fitXY"
                    android:src="#0099CC" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.5dp"
                    android:layout_weight="3"
                    android:background="@null" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.5dp"
                    android:layout_weight="3"
                    android:background="@null" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.5dp"
                    android:layout_weight="3"
                    android:background="@null" />
            </TableRow>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_content"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="#ffffff"
                android:flipInterval="30"
                android:persistentDrawingCache="animation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:padding="2dp" >

                <Button
                    android:id="@+id/comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="评论"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/download_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="下载"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="更多"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>